<turbo-stream action="append" target="alerts">
  <template>
    <%= render Avo::FlashAlertsComponent.new flashes: flash %>
  </template>
</turbo-stream>

<turbo-stream action="update" target="actions_show">
  <template>
    <script>
      // Find the turbo frame 'modal_resource'
      const modalResourceFrame = document.getElementById("modal_resource");
       const fallbackLocation = "<%= fallback_location %>";

      // Check if the turbo frame exists and has a 'src' attribute set
      if (modalResourceFrame && modalResourceFrame.getAttribute("src")) {
        console.log("reloading frame");
        modalResourceFrame.reload();
      } else {
        console.log("Frame 'modal_resource' has no 'src', fallback to location: " + fallbackLocation);
        window.location.href = fallbackLocation;  // Redirect to fallback path
      }
    </script>
  </template>
</turbo-stream>